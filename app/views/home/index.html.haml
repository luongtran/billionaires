.cover-container
  .masthead.clearfix
    .inner
      %h3.masthead-brand BillionairesJet
      %nav.nav.nav-masthead
        %a.nav-link.active{:href => "#"} Home
        - if user_signed_in?
          %a.nav-link{:href => "/backend"} Backend
          %p
            Logged in as
            = succeed ',' do
              %span.text-primary= current_user.email
            = link_to "Sign out", destroy_user_session_path, class: 'text-warning', data:{ method: :delete, confirm: 'Are you sure to Logout ?' }
        - else
          %a.nav-link{:href => "/users/sign_in"} Login
          %a.nav-link{:href => "/users/sign_up"} Register
  .inner.cover
    %h1.cover-heading Comming soon
    %p.lead Cover is a one-page template for building simple and beautiful home pages. Download, edit the text, and add your own fullscreen background photo to make it your own.
  .mastfoot
    .inner
      %p
        Copyright for
        = succeed "," do
          %a{:href => "http://billionairesjet.com"} BillionairesJet
        = succeed "." do
          %a{:href => "https://twitter.com/ngthanhquang"} @ngthanhquang
